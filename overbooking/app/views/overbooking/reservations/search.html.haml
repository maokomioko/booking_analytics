= content_for(:main_content_header) do
  .row
    .col-sm-12
      .page-header
        %h1= t('.header')

.row
  .col-sm-12
    .well.well-sm
      %dl.dl-horizontal
        %dt= t('.reservation_period')
        %dd
          = l params[:arrival].to_datetime, format: :short
          &mdash;
          = l params[:departure].to_datetime, format: :short
        %dt= t('.price')
        %dd= humanized_money_with_symbol Money.new(params[:price], 'EUR')
        %dt= t('.occupancy')
        %dd= params[:occupancy]

.row
  .col-sm-6
    %h2= t('.cheap')

    %table.table
      %tbody
        - @blocks[0].each do |_booking_id, hotels|
          %tr
            %td(colspan="2")
              %h4
                = hotels.first[:hotel][:name]
                - if hotels.first[:hotel][:address].present?
                  = "(" + hotels.first[:hotel][:address] + ")"
          - hotels.each do |block|
            %tr
              %td= block[:room]['name']
              %td= humanized_money_with_symbol block[:room]['min_price']['price'].to_money('EUR')
.row
  .col-sm-6
    %h2= t('.expensive')

    %table.table
      %tbody
        - @blocks[0].each do |_booking_id, hotels|
          %tr
            %td(colspan="2")
              %h4
                = hotels.first[:hotel][:name]
                - if hotels.first[:hotel][:address].present?
                  = "(" + hotels.first[:hotel][:address] + ")"
          - hotels.each do |block|
            %tr
              %td= block[:room]['name']
              %td= humanized_money_with_symbol block[:room]['min_price']['price'].to_money('EUR')