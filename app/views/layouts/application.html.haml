!!! 5
%html
  %head
  %title= t('meta.title')
  %meta{content: "initial-scale = 1.0, maximum-scale = 1.0", charset: 'utf-8', name: "viewport"}
  = javascript_include_tag "application", 'data-turbolinks-track' => true
  = stylesheet_link_tag "application", 'data-turbolinks-track' => true
  = csrf_meta_tags
  %body{class: @body_class, data: { page: body_data_page }}
    = render partial: 'partials/header'
    #main_frame
      #flash_container
        - flash.each do |key, value|
          .alert{class: "#{key}"}
            %strong= value
            %a.close{href: "#"}
        - unless flash
          .none

      #spinner_placeholder.hidden
        = render partial: 'partials/spinner'
        %p.loading_text= t('shared.loading')

      = yield

      = render partial: 'partials/javascript'
