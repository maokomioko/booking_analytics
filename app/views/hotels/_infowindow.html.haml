.hotel-info-map
  .col-sm-12
    .page-header
      %h4
        = hotel.name
        - if partner
          %small
            %span.label.label-success= t('overbooking.shared.partner')
      %em= hotel.address

  - if hotel.exact_class?
    .col-sm-6
      %span.text-warning
        - hotel.exact_class.to_i.times do
          = icon('star')
  - if hotel.review_score?
    .col-sm-6
      %span= hotel.class.human_attribute_name(:review_score)
      = hotel.review_score

  - if block.present?
    .space12

    .col-sm-12
      %table.table.table-condensed
        %thead
          %tr
            %th= t('.room_name')
            %th= t('.room_max_occupancy')
            %th= t('.room.price')
        %tbody
          - block.data['block'].each do |room|
            %tr
              %td= room['name']
              %td= room['max_occupancy']
              %td= number_to_euro room['min_price']['price']