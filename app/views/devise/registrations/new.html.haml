= content_for(:page_js) do
  = javascript_include_tag 'pages/auth_pages', 'data-turbolinks-track' => true
.box-register
  %h3= t('auth.new_account.title')
  %p= t('auth.new_account.subtitle')
  = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-register' }) do |f|
    .errorHandler.alert.alert-danger.no-display
      %i.fa.fa-remove-sign
      = t('shared.please_check_errors')
    %fieldset
      .form-group
        %span.input-icon
          = f.email_field :email, autofocus: true, placeholder: t('auth.fields.email'), class: 'form-control'
          %i.fa.fa-envelope
      .form-group
        %span.input-icon
          = f.password_field :password, autocomplete: "off", placeholder: t('auth.fields.password'), class: 'form-control'
          %i.fa.fa-lock
      .form-group
        %span.input-icon
          = f.password_field :password_confirmation, autocomplete: "off", placeholder: t('auth.fields.password_confirmation'), class: 'form-control'
          %i.fa.fa-lock
      .form-group
        %div
          %label.checkbox-inline{:for => "agree"}
            %input#agree.grey.agree{:name => "agree", :type => "checkbox"}
            = t('.iam_agree')
      .form-actions
        = link_to new_session_path(resource_name), class: 'btn btn-light-grey go-back' do
          %i.fa.fa-circle-arrow-left
          = t('auth.buttons.back_login')
        = f.button class: 'btn btn-bricky pull-right', type: :submit do
          = t('shared.submit')
          %i.fa.fa-arrow-circle-right

