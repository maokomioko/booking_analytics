- @body_class = 'login_page'

.panel.transitioned1000
  %h1
    %i.fa.fa-refresh.fa-2x
    %span= t('auth.password_restore.title')
  %p= t('auth.password_restore.subtitle')

= form_for resource, as: resource_name, url: password_path(resource_name), html: { method: :post }  do |f|
  = devise_error_messages!
  #recover
    %h2= t('auth.password_restore.form_title')
    .field
      = f.email_field :email, autofocus: true, placeholder: t('auth.fields.email')
    .actions
      = f.submit t('shared.reset_instructions')

      = render "devise/shared/links"
