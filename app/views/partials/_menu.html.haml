.navbar-content
  / start: SIDEBAR
  .main-navigation.navbar-collapse.collapse
    / start: MAIN MENU TOGGLER BUTTON
    .navigation-toggler
      %i.clip-chevron-left
      %i.clip-chevron-right
    / end: MAIN MENU TOGGLER BUTTON
    / start: MAIN NAVIGATION MENU
    %ul.main-navigation-menu
      %li
        = link_to calendar_index_path do
          %i.clip-calendar-3
          %span.title= t('calendar.menu.cal')
          %span.selected
      %li
        = link_to '#' do
          %i.clip-cursor
          %span.title= t('calendar.menu.forecast')
          %span.selected
      - if defined?(Graph::Engine)
        %li
          = link_to graph.root_url do
            %i.clip-bars
            %span.title= t('calendar.menu.analytics')
            %span.selected
      %li
        - if current_user && current_user.channel_managers.size > 0
          = link_to edit_channel_manager_path(current_user.wubook_auth.first.id), class: active_class(edit_channel_manager_path(current_user.wubook_auth.first.id)) do
            %i.clip-settings
            %span.title= t('calendar.menu.preferences')
            %span.selected
        - else
          = link_to new_channel_manager_path, class: active_class(new_channel_manager_path) do
            %i.clip-settings
            %span.title= t('calendar.menu.preferences')
            %span.selected