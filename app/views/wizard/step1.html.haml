= content_for(:main_content_header) do
  .row
    .col-sm-12
      .page-header
        %h1= t('.header')

= render 'progressbar', active: 1, progress: (100 / 5) * 1

.row
  .col-md-6.col-md-offset-3
    = form_for @channel_manager, as: :channel_manager, url: [:wizard, :step1_post], method: :post, remote: true, html: { class: 'form step1-form', 'data-confirm-msg' => t('.no_contacts') } do |f|
      .form-group
        %h4= t('.search_prompt')
        = f.hidden_field :booking_id, id: 'search_hotel', data: { url: search_hotels_path, hotel_url: hotel_path(id: '') }
      .row
        .col-sm-7.col-sm-offset-3
          .alert.alert-block.alert-info.fade.in
            %button.close(data-dismiss="alert" type="button") Ã—
            %p= t('.please_fill_contacts')
          .hotel-contacts{ data: { url: overbooking.hotels_contacts_by_hotel_path, 'contact-hotel-id' => @channel_manager.booking_id } }
      .form-group
        = f.button class: 'btn btn-primary' do
          = t('shared.next')
          = icon('arrow-circle-right')
