= content_for(:main_content_header) do
  .row
    .col-sm-12
      .page-header
        %h1= t('.header')

.row
  .col-sm-12
    .well.well-sm
      %dl.dl-horizontal
        %dt= t('.reservation_period')
        %dd
          = l params[:arrival].to_datetime, format: :short
          &mdash;
          = l params[:departure].to_datetime, format: :short
        %dt= t('.price')
        %dd= humanized_money_with_symbol Money.new(params[:price], 'EUR')
        %dt= t('.occupancy')
        %dd= params[:occupancy]

.row
  .col-sm-12
    %h2= t('.cheap')

    %table.table.table-hover
      %thead
        %tr
          %th
          %th
          %th
      %tbody
        - @blocks[0].each do |block|
          %tr
            %td= block[:hotel][:name]
            %td= block[:room]['name']
            %td= humanized_money_with_symbol block[:room]['min_price']['price'].to_money('EUR')

  .col-sm-12
    %h2= t('.expensive')

    %table.table
      %thead
        %tr
          %th
          %th
          %th
      %tbody
        - @blocks[1].each do |block|
          %tr
            %td= block[:hotel][:name]
            %td= block[:room]['name']
            %td= humanized_money_with_symbol block[:room]['min_price']['price'].to_money('EUR')