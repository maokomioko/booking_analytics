%tr(data-room-id="#{ f.object.id }")
  %td= f.object.name
  %td.edit-price
    .input-group
      = f.text_field :min_price, class: 'form-control'
      .input-group-addon
        = currency_symbol
  %td.edit-price
    .input-group
      = f.text_field :max_price, class: 'form-control'
      .input-group-addon
        = currency_symbol
  - if can?(:update_connector_credentials, Room)
    %td.edit-cm
      = f.select :booking_id, options_for_booking_id(f.object.booking_id, f.object.hotel_id),
          { include_blank: true },
          class: 'form-control booking-select'
    - if f.object.hotel.channel_manager.connector_type == 'previo'
      %td.edit-cm
        = f.text_field :previo_id, class: 'form-control'
  %td.action
    .success
      %span.text-success
        = icon('check')
        = t('shared.updated')
    .failure
      %span.text-danger
        = icon('exclamation-circle')
        = t('shared.error')