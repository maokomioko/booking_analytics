.bg_blue.fixed
  .container-fluid
    .header_block
      .row
        .col-xs-2.col-sm-3.col-md-3.col-lg-3
          = link_to main_app.root_path do
            .logo
              .image.pull-left
                = image_tag 'logo.png', class: 'img-responsive'
              .text.pull-left
                = image_tag 'logo-text.png', class: 'img-responsive'
        .col-xs-7.col-sm-6.col-md-6.col-lg-7
          - if current_user.present? && current_user.setup_completed?
            .header_menu
              %ul.list-inline
                %li.active= link_to t('menu.rate_management'), calendar_index_path
                %li= link_to t('menu.overbooking'), [overbooking, :directions]
                %li= link_to t('menu.competitors_lookup'), [main_app, :settings]
        .col-xs-3.col-sm-3.col-md-3.col-lg-2
          - if current_user.present?
            .user_block
              .user_avatar
                - if current_user.avatar.present?
                  = image_tag current_user.avatar.thumb, class: 'img-circle'
                - else
                  = image_tag 'default-avatar.png'
              .user_setting
                .dropdown
                  %a{"data-toggle" => "dropdown", :href => "#"}
                    = current_user.nickname
                    = icon('chevron-down')
                  %ul.dropdown-menu{"aria-labelledby" => "dLabel", :role => "menu"}
                    %li
                      = link_to t('menu.profile'), [main_app, :edit, :user, :registration]
                    - if current_user.company.present? && can?(:edit, current_user.company)
                      %li= link_to t('menu.company_profile'), [main_app, :edit, :company]
                      %li= link_to t('menu.manage_users'), [main_app, :company, :users]
                    %li
                      %a(href="#") Payment
                    %li
                      = link_to t('auth.buttons.logout'), main_app.destroy_user_session_path, method: :delete
