= content_for(:main_content_header) do
  .row
    .col-sm-12
      .page-header
        %h1= t('.header')

= render 'progressbar', active: 5

= render template: 'related_hotels/edit'

- if @related.size > 0
  = form_tag [:wizard, :step5_post], method: :post, class: 'step5-finish-form', remote: true do
    = button_tag type: :submit, class: 'btn btn-lg btn-primary' do
      = icon('flag-checkered')
      = t('.finish')