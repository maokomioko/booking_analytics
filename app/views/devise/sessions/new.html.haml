- @body_class = 'login_page'

#welcome_panel.panel.active_panel
  %h1
    %i.fa.fa-user.fa-2x
    %span= t('auth.new.title')
  %p= t('auth.new.subtitle')

= form_for resource, as: resource_name, url: session_path(resource_name) do |f|
  #login
    %h2= t('auth.new.form_title')
    .field
      = f.email_field :email, autofocus: true, placeholder: t('auth.fields.email')
    .field
      = f.password_field :password, autocomplete: "off", placeholder: t('auth.fields.password')
    - if devise_mapping.rememberable?
      .field
        = f.check_box :remember_me
        = f.label :remember_me
    .actions
      = f.submit t('auth.buttons.login')

      = render "devise/shared/links"
