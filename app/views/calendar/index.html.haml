= render partial: 'partials/menu'

#main_container
  #calendar_container
    = render partial: 'header'
    #calendar
      %table.calendar
        - i = 0
        = calendar do |date|
          - unless date < Date.today
            .container{class: ('with_applied_price' if @selected_room.recommended_in_use(date))}
              .day
                - unless date.day == 1
                  = date.day
                - else
                  = date.strftime("%B").limit(3) + ' 1st'
              .current_price
                %span= t('shared.current_price')
                %span.ccp_price
                  = set_price(@room_prices[i]['price']) unless @room_prices[i].nil?
                  - i = i + 1
              .bar.manual
                %span= t('shared.date_locked')

              .bar.recommended
                - rec_price = set_price(@selected_room.price_value(date))
                %span
                  - if rec_price.to_i > 0
                    = t('shared.recommended_price', price: rec_price)
                  - else
                    = t('shared.no_price')

              .bar.sold
                %span= t('shared.locked')

              %i.fa.fa-thumbs-o-up
              %i.fa.fa-lock
