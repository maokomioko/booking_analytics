= content_for(:page_js) do
  = javascript_include_tag 'pages/auth_pages', 'data-turbolinks-track' => true
.box-login
  %h3= t('auth.new.form_title')
  %p= t('auth.new.subtitle')
  = form_for resource, as: resource_name, url: session_path(resource_name),
      html: { class: 'form-login', novalidate: 'novalidate' } do |f|
    .errorHandler.alert.alert-danger.no-display
      %i.fa.fa-remove-sign
      = t('shared.please_check_errors')
    %fieldset
      .form-group
        %span.input-icon
          = f.email_field :email, autofocus: true, placeholder: t('auth.fields.email'), class: 'form-control'
          %i.fa.fa-user
      .form-group.form-actions
        %span.input-icon
          = f.password_field :password, autocomplete: "off", placeholder: t('auth.fields.password'), class: 'form-control password'
          %i.fa.fa-lock
          - if devise_mapping.recoverable?
            = link_to t('devise.links.password'), new_password_path(resource_name), class: 'forgot'
      .form-actions
        - if devise_mapping.rememberable?
          %label.checkbox-inline{ for: 'user_remember_me' }
            = f.check_box :remember_me, { class: 'grey remember' }
            = t('auth.new.keep_signed_in')
        %button.btn.btn-bricky.pull-right{ type: 'submit' }
          = t('auth.buttons.login')
          %i.fa.fa-arrow-circle-right
      .new-account
        = t('shared.dont_have_account')
        - if devise_mapping.registerable?
          = link_to t('devise.links.signup'), new_registration_path(resource_name), class: 'register'
