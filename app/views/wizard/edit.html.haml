.edit_profile_page
  .container-fluid
    = content_for :main_content_header do
      .page_header.h2.light.fixed
        %span.page_header_title= t('.header')

    - if devise_mapping.confirmable? && resource.pending_reconfirmation?
      .alert.alert-block.alert-info.fade.in
        %button.close{"data-dismiss" => "alert", :type => "button"} Ã—
        %h4.alert-heading
          = icon('info-circle')
          = t('flash.info')
        %p= t('devise.waiting_confirmation', user: resource.unconfirmed_email)

    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, multipart: true }) do |f|
      .max_width3.center-block.profile_form
        .row
          .col-xs-4
            .avatar_select_block
              %label= t('.my_avatar')
              .fileupload.fileupload-new{"data-provides" => "fileupload"}
                .fileupload-new.avatar_container
                  - if current_user.avatar.url.present?
                    = image_tag(current_user.avatar.big.url)
                  - else
                    = image_tag('profile-avatar.png')
                .fileupload-preview.fileupload-exists.avatar_container
                .text-center
                  %span.btn.btn-light-grey.btn-file
                    %span.fileupload-new
                      = icon('picture')
                      = t('shared.select_image')
                    %span.fileupload-exists
                      = icon('picture')
                      = t('shared.change')
                    = f.file_field :avatar, accept: 'image/*;capture=camera'
                    = f.hidden_field :avatar_cache
                  %a.btn.fileupload-exists.btn-light-grey{"data-dismiss" => "fileupload", href: '#'}
                    = icon('times')
                    = t('shared.remove')

              - if current_user.avatar.url.present?
                .checkbox{style: 'padding-left: 15px'}
                  = label_tag do
                    = f.check_box :remove_avatar
                    = t('.remove_avatar')

          .col-xs-8
            .form-group
              = f.label :email, class: 'control-label'
              = f.email_field :email, class: 'form-control text_validation'
            .h20px= t('.change_password')
            .separate2
            .form-group
              = f.label :password, class: 'control-label'
              = f.password_field :password, class: 'form-control password_confirmation password_origin'
              %span.help-block
                = icon('info-circle')
                = t('.password_tip')
            .form-group
              = f.label :password_confirmation, class: 'control-label'
              = f.password_field :password_confirmation, class: 'form-control password_confirmation_validation'
            = f.button class: 'btn btn_apply' do
              = icon('check')
              = t('shared.submit')
