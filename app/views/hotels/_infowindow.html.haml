.hotel-info-map
  .page-header
    %h4
      = hotel.name
      - if partner
        %small
          %span.label.label-success= t('overbooking.shared.partner')
    %div
      - if hotel.exact_class?
        %span.text-warning
          - hotel.exact_class.to_i.times do
            = icon('star')

      - if hotel.review_score?
        %span
          = '- ' + hotel.class.human_attribute_name(:review_score) + ':'
          = hotel.review_score

    = t('related_hotels.show.address') + ':'
    %em= hotel.address

  .col-sm-8
    .btn-group.btn-group-sm.routes{ data: { lat: hotel.latitude.to_f, lng: hotel.longitude.to_f, booking_id: hotel.booking_id } }

      - %w(driving walking transit).each do |travel_mode|
        %a.btn.btn-default(href="#" data-travel-mode="#{ travel_mode.upcase }" data-print-header="#{ t(".print_header.#{ travel_mode }", destination: hotel.name) }")
          = t(".#{ travel_mode }")

  - if block.present?
    .space12

    %table.table.table-condensed
      %thead
        %tr
          %th= t('.room.name')
          %th= t('.room.max_occupancy')
          %th= t('.room.price')
      %tbody
        - block.data['block'].each do |room|
          %tr
            %td= room['name']
            %td= room['max_occupancy']
            %td= number_to_euro room['min_price']['price']
