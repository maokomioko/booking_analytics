%ul.main-navigation-menu
  %li{ data: { menu: 'calendar:index calendar:demo' } }
    = link_to calendar_index_path do
      %i.clip-calendar-3
      %span.title= t('calendar.menu.cal')
      %span.selected
  - if current_user.channel_manager.present?
    %li{ data: { menu: 'reservations:index' } }
      = link_to [main_app, :reservations] do
        %i.clip-book
        %span.title= t('calendar.menu.reservations')
        %span.selected
  - if defined?(Graph::Engine)
    %li{ data: { menu: 'graph:hotels:index' } }
      = link_to graph.root_url do
        %i.clip-bars
        %span.title= t('calendar.menu.analytics')
        %span.selected
  - if defined?(Overbooking::Engine)
    %li
      %a(href="javascript:void(0)")
        %i.clip-cube
        %span.title= t('calendar.menu.overbooking')
        %i.icon-arrow
        %span.selected
      %ul.sub-menu
        %li{ data: { menu: 'overbooking:directions:index overbooking:directions:show' } }
          = link_to [overbooking, :directions], "data-no-turbolink" => true do
            %span.title= t('menu.overbooking.directions')
        %li{ data: { menu: 'overbooking:partners:index overbooking:partners:edit' } }
          = link_to [overbooking, :partners] do
            %span.title= t('menu.overbooking.partners')
  - if current_user.company.present? && can?(:edit, current_user.company)
    %li
      %a(href="javascript:void(0)")
        %i.clip-home-3
        %span.title= t('calendar.menu.my_company')
        %i.icon-arrow
        %span.selected
      %ul.sub-menu
        %li{ data: { menu: 'companies:edit' } }
          = link_to [:edit, :company] do
            %span.title= t('menu.company.title')
        %li{ data: { menu: 'users:index' } }
          = link_to [:company, :users] do
            %span.title= t('menu.company.users')
  %li
    %a(href="javascript:void(0)")
      %i.clip-settings
      %span.title= t('calendar.menu.preferences')
      %i.icon-arrow
      %span.selected
    %ul.sub-menu
      %li{ data: { menu: 'channel_manager:edit channel_manager:new channel_manager:match_plans' } }
        - if current_user && current_user.channel_manager
          = link_to edit_channel_manager_path(current_user.channel_manager.id), class: active_class(edit_channel_manager_path(current_user.channel_manager.id)) do
            %span.title= t('menu.connection')
        - else
          = link_to new_channel_manager_path, class: active_class(new_channel_manager_path) do
            %span.title= t('menu.connection')
      - if current_user.hotels.present?
        %li{ data: { menu: 'settings:edit settings:new settings:index' } }
          = link_to [:settings] do
            %span.title= t('menu.worker')
      - if current_user.channel_manager.try(:hotel)
        %li{ data: { menu: 'related_hotels:index related_hotels:edit' } }
          = link_to [:related_hotels] do
            %span.title= t('menu.related')

