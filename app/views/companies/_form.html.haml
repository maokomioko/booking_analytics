= form_for(@company, url: company_path, html: { multipart: true, class: 'form-company' }) do |f|
  .errorHandler.alert.alert-danger.no-display
    = icon('remove-sign')
    = t('shared.please_check_errors')
  .row
    .col-md-12
      %h3= t('.main_info')
      %hr
    .col-md-6
      .form-group
        = f.label :name, class: 'control-label'
        = f.text_field :name, class: 'form-control'
      .form-group
        = f.label :reg_number, class: 'control-label'
        = f.text_field :reg_number, class: 'form-control'
      .form-group
        = f.label :reg_address, class: 'control-label'
        = f.text_field :reg_address, class: 'form-control'
    .col-md-12
      %hr
      .form-group
        = f.button class: 'btn btn-bricky' do
          = t('shared.submit')
          = icon('arrow-circle-right')
