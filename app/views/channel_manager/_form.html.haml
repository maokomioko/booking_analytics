= form_for @channel_manager, as: :channel_manager, url: { action: (@channel_manager.new_record? ? :create : :update) }, html: { class: 'form-horizontal' } do |f|
  .form-group
    = f.label :connector_type, class: 'col-sm-2 control-label'
    .col-sm-5
      = f.select :connector_type, options_for_cm_types(@channel_manager.connector_type), {}, class: 'form-control'

  .form-group
    = f.label :login, class: 'col-sm-2 control-label'
    .col-sm-5
      = f.text_field :login, class: 'form-control'

  .form-group
    = f.label :password, class: 'col-sm-2 control-label'
    .col-sm-5
      = f.password_field :password, class: 'form-control'

  .form-group
    = f.label :lcode, class: 'col-sm-2 control-label'
    .col-sm-5
      = f.text_field :lcode, class: 'form-control'

  .form-group
    = f.label :booking_id, t('labels.booking_id'), class: 'col-sm-2 control-label'
    .col-sm-5
      = f.text_field :booking_id, class: 'form-control'

  .form-group
    = f.label :hotel_name, t('labels.hotel_name'), class: 'col-sm-2 control-label'
    .col-sm-5
      = f.text_field :hotel_name, class: 'form-control'

  .form-group
    .col-sm-5.col-sm-offset-2
      = f.button class: 'btn btn-primary', type: :submit do
        = t("auth.buttons.#{ action_name }")
        = icon('arrow-circle-right')
